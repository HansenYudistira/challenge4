<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <% if (isUpdate === true ) { %>
            UPDATE USER
        <% } else { %>
            ADD USER
        <% } %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body class="p-3">
    <% if(isUpdate === true){ %>
        <form action="/user-biodata/update?username=<%- user.username %>" method="post">
            <div class="mb-3">
                <label for="username">Username:</label><br>
                <input type="text" value="<%- user.username %>" name="username" id="username">
            </div>
            <div class="mb-3">
                <label for="password">Password:</label><br>
                <input type="password" value="<%- user.password %>" name="password" id="password">
            </div>
            <div class="mb-3">
                <label for="name">Name:</label><br>
                <input type="text" value="<%- user.name %>" name="name" id="name">
            </div>
            <div class="mb-3">
                <label for="city">City:</label><br>
                <input type="text" value="<%- user.city %>" name="city" id="city">
            </div>
            <div class="mb-3">
                <label for="country">Country:</label><br>
                <input type="text" value="<%- user.country %>" name="country" id="country">
            </div>
            <a href="/admin">
                <button class="btn btn-danger" type="button">Back</button>
            </a>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    <%} else { %>
        <form action="/user-biodata/insert" method="post">
            <div class="mb-3">
                <label for="username">Username:</label><br>
                <input type="text" name="username" id="username">
            </div>
            <div class="mb-3">
                <label for="password">Password:</label><br>
                <input type="password" name="password" id="password">
            </div>
            <div class="mb-3">
                <label for="name">Name:</label><br>
                <input type="text" name="name" id="name">
            </div>
            <div class="mb-3">
                <label for="city">City:</label><br>
                <input type="text" name="city" id="city">
            </div>
            <div class="mb-3">
                <label for="country">Country:</label><br>
                <input type="text" name="country" id="country">
            </div>
            <a href="/admin">
                <button class="btn btn-danger" type="button">Back</button>
            </a>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>
</html>